<%- include("templates/header", {title: title}); %>

<body>
  <h1>
    <%= title %>
  </h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <p>
      <%= group %>
    </p>
    <div class="btn-toolbar mb-2 mb-md-1">
      <a class="btn btn-success mx-2" data-original-title="Nuevo Registro" href="new">Nuevo Registro <i class="fas fa-plus"></i></a>
    </div>
  </div>

  <div class="container-fluid text-center">
    <div class="row">
      <table class="table table-borderless employ-table">
        <thead class="table-dark">
          <tr>
            <th>Shard Id</th>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of birth</th>
            <th colspan="1">Action</th>
          </tr>
        </thead>
        <tbody id="robot-row">
          <% list.forEach(function(data){ %>
            <tr>
              <td><%= data.shardid %></td>
              <td class="text-start"><%= data.passid %></td>
              <td class="text-start"><%= data.passname %></td>
              <td><%= data.passemail %></td>
              <td><%= data.passdob %></td>
              <td class="text-end" colspan="1">
                <a class="btn btn-primary align-baseline" data-original-title="Editar" href="/table/passenger/<%= data.passid %>"><i class="far fa-edit"></i></a>
                <a class="btn btn-danger align-baseline" data-original-title="Eliminar" href="/table/passenger/delete/<%= data.passid %>"><i class="far fa-trash-alt"></i></a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>